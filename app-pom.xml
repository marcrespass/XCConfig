<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <groupId>us.me.state.courts</groupId>
    <artifactId>APP_NAME</artifactId>
    <packaging>pom</packaging>
    <version>1.0-1-SNAPSHOT</version>
    <name>${project.artifactId}</name>

    <parent>
        <groupId>us.me.state.courts</groupId>
        <artifactId>MEJIS2Parent</artifactId>
        <version>1.0-1</version>
    </parent>

    <scm>
        <developerConnection>scm:git:git@github.com:somjb/APP_NAME.git</developerConnection>
        <tag>HEAD</tag>
    </scm>

    <properties>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <project.reporting.outputEncoding>UTF-8</project.reporting.outputEncoding>
        <mejiskit.version>2.7-1</mejiskit.version>
    </properties>

    <dependencies>
        <dependency>
            <groupId>us.me.state.courts</groupId>
            <artifactId>MEJISKit</artifactId>
            <version>${mejiskit.version}</version>
            <classifier>default</classifier>
            <type>zip</type>
        </dependency>
    </dependencies>

    <build>
        <plugins>

            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-dependency-plugin</artifactId>
                <version>2.10</version>
                <executions>
                    <execution>
                        <id>unpack-dependencies</id>
                        <phase>initialize</phase>
                        <goals>
                            <goal>unpack-dependencies</goal>
                        </goals>
                        <configuration>
                            <outputDirectory>Frameworks</outputDirectory>
                            <overWriteReleases>true</overWriteReleases>
                            <overWriteSnapshots>true</overWriteSnapshots>
                        </configuration>
                    </execution>
                </executions>
            </plugin>

            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>exec-maven-plugin</artifactId>
                <version>1.4.0</version>
                <executions>
                    <execution>
                        <id>DoXcodeCompile</id>
                        <phase>compile</phase>
                        <goals>
                            <goal>exec</goal>
                        </goals>
                        <configuration>
                            <executable>xcodebuild</executable>
                        </configuration>
                    </execution>

                    <execution>
                        <id>DoBundleVersion</id>
                        <phase>prepare-package</phase>
                        <goals>
                            <goal>exec</goal>
                        </goals>
                        <configuration>
                            <executable>defaults</executable>
                            <arguments>
                                <argument>write</argument>
                                <argument>${project.basedir}/build/Release/${project.artifactId}.app/Contents/Info.plist</argument>
                                <argument>CFBundleVersion</argument>
                                <argument>${project.version}</argument>
                            </arguments>
                        </configuration>
                    </execution>
                    <execution>
                        <id>DoBundleShortVersionString</id>
                        <phase>prepare-package</phase>
                        <goals>
                            <goal>exec</goal>
                        </goals>
                        <configuration>
                            <executable>defaults</executable>
                            <arguments>
                                <argument>write</argument>
                                <argument>${project.basedir}/build/Release/${project.artifactId}.app/Contents/Info.plist</argument>
                                <argument>CFBundleShortVersionString</argument>
                                <argument>${project.version}</argument>
                            </arguments>
                        </configuration>
                    </execution>
                    <execution>
                        <id>DoCodeSign</id>
                        <phase>prepare-package</phase>
                        <goals>
                            <goal>exec</goal>
                        </goals>
                        <configuration>
                            <executable>codesign</executable>
                            <arguments>
                                <argument>--force</argument>
                                <argument>--deep</argument>
                                <argument>--verify</argument>
                                <argument>--verbose</argument>
                                <argument>--sign</argument>
                                <argument>Developer</argument>
                                <argument>--options</argument>
                                <argument>runtime</argument>
                                <argument>${project.basedir}/build/Release/${project.artifactId}.app</argument>
                            </arguments>
                        </configuration>
                    </execution>
                    <execution>
                        <id>DoNotarize</id>
                        <phase>deploy</phase>
                        <goals>
                            <goal>exec</goal>
                        </goals>
                        <configuration>
                            <executable>xcrun</executable>
                            <arguments>
                                <argument>altool</argument>
                                <argument>--notarize-app</argument>
                                <argument>--verbose</argument>
                                <argument>--file</argument>
                                <argument>${project.basedir}/target/${project.artifactId}-${project.version}-default.zip</argument>
                                <argument>--primary-bundle-id</argument>
                                <argument>${project.groupId}.${project.artifactId}</argument>
                                <argument>-t</argument>
                                <argument>osx</argument>
                                <argument>--output-format</argument>
                                <argument>xml</argument>
                                <argument>-p</argument>
                                <argument>@keychain:Apple_Notarize_Password</argument>
                            </arguments>
                        </configuration>
                    </execution>
                </executions>
            </plugin>

            <plugin>
                <artifactId>maven-assembly-plugin</artifactId>
                <version>2.5.4</version>
                <configuration>
                    <descriptors>
                        <descriptor>maven-assembly-descriptor.xml</descriptor>
                    </descriptors>
                </configuration>
                <executions>
                    <execution>
                        <id>make-assembly</id>
                        <phase>package</phase>
                        <goals>
                            <goal>single</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>

            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-release-plugin</artifactId>
                <version>2.5.2</version>
            </plugin>

        </plugins>
    </build>

</project>
